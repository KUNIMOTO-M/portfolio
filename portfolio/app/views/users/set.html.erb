<div class="microposts">
  <div class="title_container"> 
    <h1 class="content">ユーザー設定</h1>
  </div> 
  
	<div class="notice_container">
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<%= form_with model: @user do |f| %>
				<%= render 'shared/error_messages', object: f.object %>

				<%= f.label :email %>
				<%= f.email_field :email, class: "form-control u_set_li" %>

				<%= f.label :password %>
				<%= f.password_field :password, class: "form-control u_set_li" %>

				<%= f.label :password_confirmation %>
				<%= f.password_field :password_confirmation, class: "form-control u_set_li" %>

				<%= f.submit %>
				<% end %>
			</div>
		</div>
	</div>
</div>
